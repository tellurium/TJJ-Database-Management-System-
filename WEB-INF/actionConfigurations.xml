<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<beans>
 	
 	<!-- Actions Configuration -->
	<bean id="inflateSubsystemList" class="the.web.actions.InflateSubsystemList">
		<property name="subsystemList">
			<ref local="subsystemList" />
		</property>
	</bean>

	<bean id="loginAction" class="the.web.actions.LoginAction">
		
	</bean>

	<bean id="subsystemClass" class="the.web.actions.SubsystemAction">
		<property name="subsystemDAO">
			<ref local="subsystemDAOImpl" />
		</property>
	</bean>

	<bean id="subsystemDAOImpl" class="the.dao.subsystem.SubsystemDAOImpl">
		
	</bean>

	<!-- Some instance bean for debug-->
	<bean id="subsystemList" class="java.util.ArrayList">
		<constructor-arg>
			<list>
				<value>jiangu</value>
				<value>peiyouqi</value>
				<value>diankong</value>
			</list>
		</constructor-arg>
	</bean>

</beans>
