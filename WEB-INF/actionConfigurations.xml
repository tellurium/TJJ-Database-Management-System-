<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<beans>
 	
 	<!-- Actions Configuration -->

 	<!-- Index -->
 	<bean id="indexClass" class="the.web.actions.IndexAction">
 		<property name="subsystemDAO">
			<ref local="subsystemDAOImpl" />
		</property>
 	</bean>

 	<!-- Login -->
	<bean id="loginClass" class="the.web.actions.LoginAction">
		<property name="subsystemDAO">
			<ref local="subsystemDAOImpl" />
		</property>
	</bean>
	
	<!-- Subsystem -->
	<bean id="subsystemClass" class="the.web.actions.SubsystemAction">
		<property name="subsystemDAO">
			<ref local="subsystemDAOImpl" />
		</property>
	</bean>
	<bean id="subsystemDAOImpl" class="the.dao.subsystem.SubsystemDAOImpl" />

	<!-- Privilege -->
	<bean id="privilegeClass" class="the.web.actions.PrivilegeAction">
		<property name="privilegeDAO">
			<ref local="privilegeDAOImpl" />
		</property>
	</bean>
	<bean id="privilegeDAOImpl" class="the.dao.privilege.PrivilegeDAOImpl" />

	<!-- User -->
	<bean id="userClass" class="the.web.actions.UserAction">
		<property name="userDAO">
			<ref local="userDAOImpl" />
		</property>
	</bean>
	<bean id="userDAOImpl" class="the.dao.user.UserDAOImpl" />

	<!-- Log -->
	<bean id="logClass" class="the.web.actions.LogAction">
		<property name="logDAO">
			<ref local="logDAOImpl" />
		</property>
	</bean>
	<bean id="logDAOImpl" class="the.dao.log.LogDAOImpl"/>

</beans>
